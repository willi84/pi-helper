#!/bin/bash
# DESC: Pull the latest version from the GitHub repository

SRC_DIR="$HOME/.pi-helper-src"
INSTALL_DIR="$HOME/.local/share/pi"

echo "ðŸ”„ Pulling latest changes from repo..."
cd "$SRC_DIR"
git pull

echo "ðŸ“¦ Updating installed files..."
