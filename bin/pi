#!/bin/bash

INSTALL_DIR="$HOME/.local/share/pi"
BIN_DIR="$INSTALL_DIR/bin"

# Help text on update possibility
check_for_updates() {
    SRC_DIR="$HOME/.pi-helper-src"
    if [ ! -d "$SRC_DIR/.git" ]; then return; fi
    if ! ping -c1 -W1 github.com >/dev/null 2>&1; then return; fi
    cd "$SRC_DIR"
    if git diff --quiet; then
        echo "üîÑ Update available: run 'pi update' to fetch latest changes."
    fi
}

check_for_updates

CMD="$1"
shift

SCRIPT="$BIN_DIR/$CMD"

if [ -x "$SCRIPT" ]; then
    "$SCRIPT" "$@"
else
    echo "‚ùå Unknown command: $CMD"
    echo "Available commands:"
    for file in "$BIN_DIR"/*; do
        [ -x "$file" ] || continue
        name=$(basename "$file")
        desc=$(grep -m1 '^# DESC:' "$file" | cut -d':' -f2- | sed 's/^ //')
        printf "  %-15s %s\n" "$name" "$desc"
    done
    exit 1
fi
