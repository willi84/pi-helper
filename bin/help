#!/bin/bash
# DESC: Show list of available commands and descriptions

BIN_DIR="$HOME/.local/share/pi/bin"

echo "ðŸ“– Available commands:"
echo

for file in "$BIN_DIR"/*; do
    [ -x "$file" ] || continue
    cmd=$(basename "$file")
    desc=$(grep -m1 '^# DESC:' "$file" | cut -d':' -f2- | sed 's/^ //')
    printf "  %-15s %s\n" "$cmd" "$desc"
done
