#!/bin/bash
# DESC: Smart pip installer using venv fallback

set -e

if [ "$#" -lt 1 ]; then
    echo "âŒ Please provide at least one package to install."
    exit 1
fi

VENV="$HOME/.local/share/pi/venv"
TEST=$(python3 -m pip install --dry-run "$1" 2>&1 || true)

if echo "$TEST" | grep -q "externally-managed-environment"; then
    echo "ðŸ“¦ Using virtual environment at $VENV..."
    if [ ! -d "$VENV" ]; then
        python3 -m venv "$VENV"
    fi
    "$VENV/bin/pip" install "$@"
else
    echo "ðŸ“¦ Installing system-wide via sudo pip..."
    sudo pip install "$@"
fi
